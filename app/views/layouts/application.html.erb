<!doctype html>
<html>
  <head>
    <title>
      <% if @channel %><%= @channel.title %> | <% end %>
      Red Cursor
    </title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "test" if Rails.env.test? %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= users_js %>
    <% if mobile? %>
      <meta name="viewport" content="initial-scale = 1.0, user-scalable = no">
    <% end %>
    <%= favicon_link_tag 'favicon.png', :rel => 'shortcut icon', :type => 'image/png' %>
  </head>
  <body<%= ' class="mobile"'.html_safe if mobile? %> data-socket-server="ws<%= "s" if Rails.env.production? %>://<%= request.host %>:8000" data-api-key="<%= current_user.api_key %>" data-user-id="<%= current_user.id %>">
    <a name="top"></a>

    <header class="header">
      <div class="content">
        <%= render :partial => "shared/toolbar" %>
      </div>
    </header>

    <% if !flash[:notice].blank? %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <div id="container">
      <section id="pre-content"></section>
      <section id="content">
        <div class="channel-search-container"></div>
        <div class="content-inner">
          <%= yield %>
        </div>
      </section>
    </div>
  </body>
</html>
