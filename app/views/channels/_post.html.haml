%a{:name => "post_#{post.id}"}
=div_for post do
  -if new_features?
    .user-color{:style => "background-color: #{post.user.color}"}
  .name
    -if new_features?
      =render :partial => "shared/user", :object => post.user
    -else
      =user_name(post.user)
  .date
    .fave{:title => "Faved by:\n#{post.faves.map { |f| f.user.login }.join("\n")}" }
      .fave-text
        .count= post.faves.count
        =link_to "#{image_tag("favorite_on.png", :class => "on", :style => post.faved_by?(current_user) ? "" : "display:none;")}#{image_tag("favorite_off.png", :class => "off", :style => !post.faved_by?(current_user) ? "" : "display:none;")}".html_safe, "#", :class => "favorite", "data-post-id" => post.id
    .date-text
      =link_to post.created_at.try(:strftime, '%Y/%m/%d %H:%M:%S'), channel_path(@channel, :anchor => "post_#{post.id}")
  .body
    =format_body(post)
  -if post.user_id == current_user.id
    / %br/
    .actions
      =link_to "Edit", edit_channel_post_path(@channel, post)
      =link_to "Delete", channel_post_path(@channel, post), :method => :delete, :confirm => "Are you sure?"
.clear
