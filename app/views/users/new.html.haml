%h2 You have been invited to join
=error_messages_for :user
=form_for :user, :url => users_path, :html => {:class => "normal activate"} do |f|
  =f.hidden_field :invite_user_id
  =f.hidden_field :activation_code
  %p
    %label{:for => "login"} Name:
    =f.text_field :login
  %p
    %label{:for => "password"} Password:
    =f.password_field :password
  %p
    %label{:for => "password_confirmation"} Confirm Password:
    =f.password_field :password_confirmation
  .actions
    =submit_tag 'Create'
